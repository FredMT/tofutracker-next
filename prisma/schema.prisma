  @@schema("public")
}

enum AccountType {
  email
  google
  github

  @@schema("users")
}

enum WatchStatus {
  PLANNING
  WATCHING
  COMPLETED
  DROPPED
  REWATCHING
  ONHOLD

  @@schema("users")
}

enum WatchMediaType {
  movie
  show
  season
  episode

  @@schema("users")
}
